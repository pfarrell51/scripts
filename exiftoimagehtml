# exiftoimagehtml
# take putput of exiftool on a directory of png and jpg files and generate a HTML page
# exiftool -ImageHeight -ImageWidth * | awk -f exiftoimagehtml

  /=====/ { if (h > 0 ) {  printf "%s <img src=\"XYZZY/%s\" width=\"%d\" width=\"%d\"><p><hr>\n", fs, fs, h, w }
             h=0; w=0; fs = $2
          }
  /Image Height/ { h = $4  }
  /Image Width/ {  w = $4  }
END          {  printf "%s <img src=\"XYZZY/%s\" width=\"%d\" width=\"%d\"><p><hr>\n", fs, fs, h, w }
